<!DOCTYPE html>
<html lang="pt-br">

<%- include partials/head %>

    <head>

        <link rel='stylesheet' href='/stylesheets/main.css'>
        <link rel='stylesheet' href='/stylesheets/perfil.css'>
        <title>DOAME</title>
    </head>

    <body>
        <%- include partials/header %>
            <main>
                <section class="container">
                    <div class="botoes">
                        <button onclick="location='/perfil/edit'" class= "botao1">Editar perfil</button>
                        <button onclick="callConfirmModal()" class="botao2">Excluir conta</button>
                    </div>
                    <%- include partials/modalConfirm %>
                        <div class="info">
                            <h2>Perfil</h2>
                            <div class="user">
                                <% for( let i=1; i < Object.keys(usuario).length-3; i++ ) { %>
                                    <p><strong>
                                            <%= Object.keys(usuario)[i] %>:
                                        </strong>
                                        <%= Object.values(usuario)[i] %>
                                    </p>
                                    <% } %>
                            </div>
                        </div>
                        <div class="transacao">
                            <% if (usuario.cnpj) { %>
                                <h2>Doações recebidas</h2>
                                <% } else { %>
                                    <h2>Doações realizadas</h2>
                                    <% } %>
                                        <div class="user">
                                            <% for( let i=0; i < Object.keys(listaDoacoes).length; i++ ) { %>
                                                <p><strong>
                                                        <%= i+1 %>- Valor:
                                                    </strong>R$ <%= listaDoacoes[i].valor %> <strong>Forma de pagamento:
                                                        </strong>
                                                        <%= listaDoacoes[i].forma_pagamento %>
                                                </p>
                                                <% } %>
                                        </div>
                        </div>
                </section>
            </main>
            <%- include partials/footer %>

                <script src="/javascripts/main.js"></script>
    </body>

</html>