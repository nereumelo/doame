<!DOCTYPE html>
<html lang="pt-br">

<%- include partials/head %>

    <head>

        <link rel='stylesheet' href='/stylesheets/main.css'>
        <link rel='stylesheet' href='/stylesheets/perfil.css'>
        <title>DOAME</title>
    </head>

    <body>
        <%- include partials/header %>
            <main>
                <section class="container">
                    <a  href="/perfil/edit"><h3>Editar perfil</h3></a>
                    <a  onclick="callConfirmModal()"><h3>Excluir conta</h3></a>
                    <%- include partials/modalConfirm %>
                <div class = "info">
                    <h2>Perfil</h2>
                    <% for( let i=1; i < Object.keys(usuario).length-3; i++ ) { %>
                        <p><strong><%= Object.keys(usuario)[i] %>: </strong><%= Object.values(usuario)[i] %></p>
                    <% } %>
                    </div>
                <div class ="transacao">
                    <% if (usuario.cnpj) { %>
                        <h2 style="text-align: center; padding-top: 90px; padding-bottom: 50px;">Doações recebidas</h2>
                    <% } else { %>
                        <h2 style="text-align: center; padding-top: 90px; padding-bottom: 50px;">Doações realizadas</h2>
                    <% } %>
                    <% for( let i=0; i < Object.keys(listaDoacoes).length; i++ ) { %>
                        <p><strong><%= i+1 %>- Valor: </strong>R$ <%= listaDoacoes[i].valor %>       <strong>Forma de pagamento: </strong> <%= listaDoacoes[i].forma_pagamento %></p>
                    <% } %>
                </div>
                </section>
            </main>
            <%- include partials/footer %>
                
                    <script src="/javascripts/main.js"></script>
    </body>

</html>